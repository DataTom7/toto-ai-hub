{
  "name": "toto-ai-hub",
  "version": "1.0.0",
  "description": "AI agent system for Toto platform using Google Gemini",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "node server.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon server.js\"",
    "dev:tsc": "tsc --watch",
    "dev:server": "nodemon server.js",
    "test": "jest",
    "clean": "rimraf dist",
    "index-docs": "ts-node scripts/index-documentation.ts",
    "sync-kb-to-vertex": "ts-node scripts/sync-kb-to-vertex.ts",
    "add-missing-kb-entries": "ts-node scripts/add-missing-kb-entries.ts",
    "migrate-prompts-to-kb": "ts-node src/scripts/migrate-prompts-to-kb.ts",
    "migrate-knowledge-base": "ts-node scripts/migrate-knowledge-base.ts",
    "verify-kb-entries": "ts-node scripts/verify-kb-entries.ts",
    "analyze-kb-migration": "ts-node scripts/analyze-kb-migration.ts",
    "add-missing-kb": "ts-node scripts/add-missing-kb-entries.ts",
    "check-firestore": "ts-node scripts/check-firestore-instance.ts",
    "audit-kb-languages": "ts-node src/scripts/audit-kb-languages.ts",
    "backup-kb": "ts-node src/scripts/backup-kb-entries.ts",
    "convert-kb-to-english": "ts-node src/scripts/convert-kb-to-english.ts",
    "convert-kb-dry-run": "ts-node src/scripts/convert-kb-to-english.ts --dry-run",
    "update-kb-donations-013": "ts-node scripts/update-kb-donations-013.ts",
    "update-kb-from-hardcoded": "ts-node scripts/update-kb-entries-from-hardcoded.ts"
  },
  "keywords": [
    "ai",
    "agents",
    "gemini",
    "toto",
    "chatbot"
  ],
  "author": "Toto Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^3.28.0",
    "@google-cloud/discoveryengine": "^1.0.0",
    "@google/generative-ai": "^0.24.1",
    "@types/cheerio": "^1.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^11.0.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "firebase": "^10.0.0",
    "firebase-admin": "^12.0.0",
    "google-auth-library": "^9.0.0",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.23.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sharp": "^0.34.4",
    "twitter-api-v2": "^1.15.0",
    "typescript": "^5.2.2",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.33",
    "@types/node-fetch": "^2.6.13",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2"
  }
